<%- include('../partials/html-head') %>
<link rel="stylesheet" href="/stylesheets/profiles/show.css">
<%- include('../partials/nav') %>

<section>
  <h1>Edit Game</h1>
  <form action="/profiles/<%= profile._id %>/games/<%= game._id %>?_method=PUT" method="post">
    <input type="text" name ="title" class = 'input' autocomplete="off" value="<%= game.title %>">
    <label >
      Game type:
      <select name="gameStyle">
        <option value="<%= game.gameStyle %>"><%= game.gameStyle %></option>
        <option value="Standard">Standard</option>
        <option value="Nuzlocke">Nuzlocke</option>
        <option value="Randomized">Randomized</option>
      </select>
    </label>
    <button type="submit">Update</button>
    </form>
    <div>
  </div>
</section>

